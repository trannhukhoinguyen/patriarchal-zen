{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "types": ["google.visualization", "vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@content/*": ["src/content/*"],
      "@data/*": ["src/data_files/*"],
      "@images/*": ["src/images/*"],
      "@scripts/*": ["src/assets/scripts/*"],
      "@styles/*": ["src/assets/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@/shortcodes/*": ["./src/components/ui/shortcodes/*"]
    }
  },
  "include": [".astro/types.d.ts", "**/*", "src"],
  "exclude": ["dist"]
}
